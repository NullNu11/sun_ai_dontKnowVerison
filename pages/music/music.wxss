/**index.wxss**/

.item {
  border: 1rpx solid #eee;
  padding: 10rpx;
  font-size: 11pt;
}

.active {
  background: #a51515;
  color: #fff;
}

.background-pic{
  position: flex;
  width: 100%;
  height: 600rpx;
}

.background {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  text-align: center;
  background: rgb(187, 224, 237);
}

.background .info_name{
  position: fixed;
  top: 140rpx;
  left: 0;
  right: 0;
  font-size: 23pt;
  color: #353535;
  border-color: orange;
  border:10rpx;
}

.background .info_author{
  position: fixed;
  top: 240rpx;
  left: 0;
  right: 0;
  font-size: 15pt;
  color: #353535;
  border-color: orange;
  border:10rpx;
}


.background .list {
  position: fixed;
  right: 40rpx;
  top: 40rpx;
  width: 60rpx;
  height: 60rpx;
}

.background .poster {
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  margin-top: 400rpx;
  border:50rpx;
}

.rotate {
  animation: rotate 20s linear infinite;
}

.rotate-paused {
  animation: rotate 20s linear infinite;
  animation-play-state: paused;
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }

  50% {
    transform: rotate(180deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.progress {
  position: fixed;
  bottom: 90rpx;
  left: 50rpx;
  right: 50rpx;
  display: flex;
  align-items: center;
  font-size: 10pt;
  color: rgb(87, 49, 49);
  text-align: center;
}

.progress .bar {
  flex: 1;
}

.progress text {
  flex-basis: 90rpx;
}

.buttons {
  position: fixed;
  bottom: 20rpx;
  left: 50rpx;
  right: 50rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.buttons .button {
  width: 70rpx;
  height: 70rpx;
}

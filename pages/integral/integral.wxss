/* pages/point/point.wxss */

page {

  background: rgb(187, 224, 237);
}

.user-point-text{
  color:rgb(61, 155, 184);
  font-size: 40rpx;
  text-align: center;
  padding-top: 40rpx;
}

.user-point{
  color:#ff9b6c;
  font-size: 55rpx;
  text-align: center;
}
/* 主要内容 */
.contentList{
  width:90%;
  margin: 0rpx auto;
  margin-top: 10rpx;
}
.content{
  width: 100%;
  height: auto;
  padding: 10rpx 5rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #cdcdcd;
  background:white;
  border-radius: 10px;
  border:rgb(47, 162, 197);
  border-style:solid;
  border-width: 5rpx;
}
.contentImg{
  width: 232rpx;
  height: 232rpx;
  border-radius: 15rpx;
}
.contentImg>image{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
.content-right{
  width: 530rpx;
  height: 100%;
  margin-left: 20rpx;
}
.title{
  width: 100%;
  height: 138rpx;
  overflow: hidden;
}
.titleText{
  font-size: 40rpx;
  color: #333;
  text-align: left;
  display: -webkit-box;
  -webkit-line-clamp: 1;/*行数n*/
  -webkit-box-orient: vertical; 
  overflow: hidden;
  text-overflow: ellipsis;
}
.introduction{
  font-size: 28rpx;
  color: #949494;
  text-align: left;
  padding: 15rpx 0rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;/*行数n*/
  -webkit-box-orient: vertical; 
  overflow: hidden;
  text-overflow: ellipsis;
}

.count{
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: start;
  align-items: center;
}
.pointcount{
 font-size: 30rpx;
 color: #ff9b6c;
 margin-right: 30rpx;
}
.stockcount{
  font-size: 30rpx;
  color: #1b1b1b;
}
.exchange_btn{
  font-size: 40rpx;
  color: #ffffff;
  background:rgb(47, 162, 197);
  border-radius: 10px;
  width: 350rpx;
}
.exchange_btn_outofstock{
  font-size: 40rpx;
  color: #ffffff;
  background:rgb(110, 110, 110);
  border-radius: 10px;
  width: 350rpx;

}